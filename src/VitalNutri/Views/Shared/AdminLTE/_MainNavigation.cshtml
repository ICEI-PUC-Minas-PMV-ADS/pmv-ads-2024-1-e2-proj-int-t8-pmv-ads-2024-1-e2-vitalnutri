@using static VitalNutri.Helpers.NavigationIndicatorHelper;
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="~/Home" class="brand-link">
        <img src="~/img/vital-nutri-logo.jpg" alt="VitalNutri Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">VitaNutri</span>
    </a>
    <div class="sidebar">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="#" class="d-block">Hi, @User.Identity.Name </a>
                </div>
            </div>
        }
        else
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="info">
                    <a href="#" class="d-block">Hi, Visitor</a>
                </div>
            </div>
        }
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                @if (User.Identity.IsAuthenticated)
                {
                    //CLIENTE
                    @if (User.IsInRole("Cliente"))
                    {
                        <li class="nav-item ">
                            <a asp-controller="Cliente" asp-action="Index" class="nav-link @Url.MakeActiveClass("home","index")">
                                <i class="nav-icon fas fa-home"></i>
                                <p>
                                    Cliente
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Perfil" asp-action="Index" class="nav-link @Url.MakeActiveClass("Perfil","index")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Perfil</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="PlanoAlimentar" asp-action="Index" class="nav-link @Url.MakeActiveClass("Plano Alimentar","index")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Plano Alimentar</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="PlanoTreino" asp-action="Privacy" class="nav-link @Url.MakeActiveClass("Plano de Treino","privacy")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Plano de Treino</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    @if (User.IsInRole("Nutricionista"))
                    {
                        //NUTRICIONISTA
                        <li class="nav-item ">
                            <a asp-controller="Nutricionista" asp-action="Index" class="nav-link @Url.MakeActiveClass("Nutricionista","index")">
                                <i class="nav-icon fas fa-home"></i>
                                <p>
                                    Nutricionista
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-area="Nutricionista" asp-controller="Paciente" asp-action="Index" class="nav-link @Url.MakeActiveClass("Paciente", "Index")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Paciente</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Nutricionista" asp-controller="Alimento" asp-action="Index" class="nav-link @Url.MakeActiveClass("Alimento", "Index")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Alimento</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-area="Nutricionista" asp-controller="PlanoAlimentar" asp-action="Index" class="nav-link @Url.MakeActiveClass("PlanoAlimentar", "Index")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>PlanoAlimentar</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    @if (User.IsInRole("TreinadorPessoal"))
                    {
                        //TREINADOR PESSOAL
                        <li class="nav-item ">
                            <a asp-controller="Home" asp-action="Index" class="nav-link @Url.MakeActiveClass("Treinador Pessoal","index")">
                                <i class="nav-icon fas fa-home"></i>
                                <p>
                                    Treinador Pessoal
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="Index" class="nav-link @Url.MakeActiveClass("Alunos","index")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Alunos</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="Privacy" class="nav-link @Url.MakeActiveClass("Exercícios","privacy")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Exercícios</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="Privacy" class="nav-link @Url.MakeActiveClass("Plano de Treino","privacy")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Plano de Treino</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                }
            </ul>
        </nav>
    </div>
</aside>